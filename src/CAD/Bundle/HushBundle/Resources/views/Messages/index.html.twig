{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Messages list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Messagekey</th>
                <th>Senttime</th>
                <th>Messagecontent</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('messages_show', { 'id': entity.id }) }}">{{ entity.messageKey }}</a></td>
                <td>{% if entity.sentTime %}{{ entity.sentTime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.messageContent }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('messages_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('messages_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('messages_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
