{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Messages</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Messagekey</th>
                <td>{{ entity.messageKey }}</td>
            </tr>
            <tr>
                <th>Senttime</th>
                <td>{{ entity.sentTime|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Messagecontent</th>
                <td>{{ entity.messageContent }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('messages') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('messages_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
