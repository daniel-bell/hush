<!DOCTYPE html>
<head>
{% stylesheets 'css/*.css' %}
	    <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
{% endstylesheets %}
</head>
<body>
	<div id="navbar">
			<div class="grid">
			<div class="unit one-of-five nav-title">
				<h1><a href="/">hush</a></h1>
			</div>
			<div class="unit four-of-five nav-items">
					<ul>
						{% if is_granted('IS_AUTHENTICATED_FULLY') %}
							<li><a class="flat-button flat-button-green" href="/logout">Logout</a></li>
						{% else %}
							<li><a class="flat-button flat-button-green" href="/login">Login</a></li>
						{% endif %}
						<li><a href="https://github.com/daniel-bell/hush">Github</a></li>
					</ul>
			</div>
			</div>
		</div>

		{% block body %}
		{% endblock %}

	<footer>
			Hush
	</footer>
</body>
</html>