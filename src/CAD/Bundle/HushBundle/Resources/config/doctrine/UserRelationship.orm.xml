<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="CAD\Bundle\HushBundle\Entity\UserRelationship" table="user_relationship">
    <indexes>
      <index name="creator_user_id" columns="creator_user_id"/>
      <index name="target_user_id" columns="target_user_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="relationshipKey" type="string" column="relationship_key" length="256" nullable="false"/>
    <field name="creatorUserKey" type="string" column="creator_user_key" length="256" nullable="false"/>
    <field name="targetUserKey" type="string" column="target_user_key" length="256" nullable="false"/>
    <field name="relationshipType" type="string" column="relationship_type" length="30" nullable="false"/>
    <many-to-one field="targetUser" target-entity="Users">
      <join-columns>
        <join-column name="target_user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="creatorUser" target-entity="Users">
      <join-columns>
        <join-column name="creator_user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
