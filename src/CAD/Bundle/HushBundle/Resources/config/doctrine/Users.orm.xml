<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="CAD\Bundle\HushBundle\Entity\Users" table="users">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="username" type="string" column="username" length="256" nullable="false"/>
    <field name="email" type="string" column="email" length="256" nullable="true"/>
    <field name="passwordHash" type="string" column="password_hash" length="256" nullable="false"/>
    <field name="salt" type="string" column="salt" length="256" nullable="false"/>
    <field name="avatarFilePath" type="string" column="avatar_file_path" length="256" nullable="true"/>
    <field name="locked" type="datetime" column="locked" nullable="true"/>
    <field name="lastActivity" type="datetime" column="last_activity" nullable="true"/>
  </entity>
</doctrine-mapping>
